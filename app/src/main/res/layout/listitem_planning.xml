<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list"
    android:padding="@dimen/general_list_padding">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <be.appreciate.buttonsforcleaners.views.TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Appreciate"
            style="@style/Bfc.TextView.Body.Dark"/>

        <be.appreciate.buttonsforcleaners.views.TextView
            android:id="@+id/textView_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="09:00 - 11:00"
            style="@style/Bfc.TextView.Body"/>

        <be.appreciate.buttonsforcleaners.views.TextView
            android:id="@+id/textView_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Bellevue 5, 9050 Ledeberg"
            style="@style/Bfc.TextView.Body"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/general_list_padding"
        android:gravity="right">

        <be.appreciate.buttonsforcleaners.views.TextView
            android:id="@+id/textView_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="12 km"
            style="@style/Bfc.TextView.Caption"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageView_alert"
            android:layout_width="@dimen/planning_list_item_alert"
            android:layout_height="@dimen/planning_list_item_alert"
            app:srcCompat="@drawable/ic_warning"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageView_completed"
            android:layout_width="@dimen/planning_list_item_alert"
            android:layout_height="@dimen/planning_list_item_alert"
            app:srcCompat="@drawable/ic_completed"/>

    </LinearLayout>

</LinearLayout>