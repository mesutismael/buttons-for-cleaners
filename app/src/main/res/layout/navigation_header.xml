<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/navigation_header_background"
    android:paddingLeft="@dimen/navigation_header_padding"
    android:paddingRight="@dimen/navigation_header_padding"
    android:paddingBottom="@dimen/navigation_header_padding"
    android:paddingTop="@dimen/navigation_header_padding_top">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageView_user"
        android:layout_width="@dimen/navigation_header_image"
        android:layout_height="@dimen/navigation_header_image"
        android:layout_marginBottom="@dimen/navigation_header_padding"
        app:riv_oval="true"
        app:riv_border_color="@color/general_image_border"
        app:riv_border_width="@dimen/general_image_border"/>

    <be.appreciate.buttonsforcleaners.views.TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obama"
        android:textColor="@color/navigation_header_text"
        style="@style/Bfc.TextView.Body.Dark"/>

    <be.appreciate.buttonsforcleaners.views.TextView
        android:id="@+id/textView_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="President"
        android:textColor="@color/navigation_header_text"
        android:visibility="gone"
        style="@style/Bfc.TextView.Body"/>

</LinearLayout>